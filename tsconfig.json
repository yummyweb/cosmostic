{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "ES2017"
    ],
    "strict": true,
    "target": "ES2017"
  },
  "exclude": ["**/__snapshots__/**", "**/test/**", "**/*.test.ts"]
}
